<h1>Listing reviews</h1>

<table>
  <tr>
    <th>Author</th>
    <th>Body</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @reviews.each do |review| %>
  <tr>
    <td><%= review.author %></td>
    <td><%= review.body %></td>
    <td><%= link_to 'Show', [@product, review] %></td>
    <td><%= link_to 'Edit', edit_review_path(@product, review) %></td>
    <td><%= link_to 'Destroy', [@product, review], method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

